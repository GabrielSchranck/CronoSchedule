<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schedule.View.CadastraClientePage"
             Title="CRONO CLIENTES">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label 
                Text="CADASTRE UM CLIENTE"
                HorizontalOptions="Center"
                TextColor="#0857bf"
                FontSize="30"
                FontAttributes="Bold"
                Margin="0,10,0,0" />

            <Grid HorizontalOptions="Center">
                <Image 
                    x:Name="ClienteImage"
                    HeightRequest="200"
                    WidthRequest="200"
                    Aspect="AspectFill"
                    BackgroundColor="#F0F0F0"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

                <Button
                    BackgroundColor="#0857bf"
                    TextColor="White"
                    FontSize="25"
                    Text="+"
                    WidthRequest="50"
                    HeightRequest="50"
                    CornerRadius="25"
                    VerticalOptions="End"
                    HorizontalOptions="End"
                    Margin="0,0,10,10"
                    Clicked="btnFoto_Clicked" />
            </Grid>

            <Entry
                x:Name="NomeEntry"
                Placeholder="Nome do Cliente"
                TextColor="#333"
                FontSize="18"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand" />

            <Button 
                Text="Cadastrar"
                BackgroundColor="#0857bf"
                TextColor="White"
                CornerRadius="12"
                HeightRequest="50"
                VerticalOptions="Center"
                HorizontalOptions="FillAndExpand"
                Clicked="btnCadastrar_Clicked"
                Margin="0,20,0,0" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>