<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Schedule.View.HomePage"
             Title="CRONO HAIR THERAPY"
             BackgroundColor="White">

    <Grid>
        <!-- LISTAGEM DOS AGENDAMENTOS -->
        <CollectionView
            x:Name="SchedulesCollectionView"
            ItemsSource="{Binding _schedules}"
            Margin="20"
            VerticalOptions="FillAndExpand">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <!-- CANCELAR (esquerda) -->
                        <SwipeView.LeftItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem
                                    Text="Cancelar"
                                    BackgroundColor="#D32F2F"
                                    Invoked="OnCancelarSwipe"
                                    IconImageSource="cancel_icon.png" />
                            </SwipeItems>
                        </SwipeView.LeftItems>

                        <!-- CONCLUIR (direita) -->
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Reveal">
                                <SwipeItem
                                    Text="Concluir"
                                    BackgroundColor="#0857bf"
                                    Invoked="OnConcluirSwipe"
                                    IconImageSource="check_icon.png" />
                            </SwipeItems>
                        </SwipeView.RightItems>

                        <!-- CONTEÃšDO DO ITEM -->
                        <Frame
                            Padding="15"
                            Margin="0,5"
                            BackgroundColor="#f9f9f9"
                            CornerRadius="12"
                            HasShadow="True">
                            <VerticalStackLayout Spacing="5">
                                <!-- Nome do Cliente -->
                                <Label
                                    Text="{Binding Cliente.Nome}"
                                    FontSize="20"
                                    FontAttributes="Bold"
                                    TextColor="#0D47A1" />

                                <!-- Linha com data, hora e valor -->
                                <HorizontalStackLayout Spacing="15">
                                    <Label
                                        Text="{Binding DataAtendimento, StringFormat='Data: {0:dd/MM/yyyy}'}"
                                        FontSize="14"
                                        TextColor="#555" />

                                    <Label
                                        Text="{Binding HoraAtendimento, StringFormat='HorÃ¡rio: {0:hh\\:mm}'}"
                                        FontSize="14"
                                        TextColor="#555" />

                                    <Label
                                        Text="{Binding Valor, StringFormat='Valor: R$ {0:F2}'}"
                                        FontSize="14"
                                        TextColor="#555" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BOTÃ•ES FIXOS NO CANTO -->
        <HorizontalStackLayout
            Spacing="10"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="20">

            <!-- BotÃ£o Cliente -->
            <Button
                FontSize="24"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#0857bf"
                TextColor="White"
                Clicked="ClienteButton_Clicked">
                <Button.ImageSource>
                    <FontImageSource Glyph="ðŸ‘¤" Size="24" Color="White" />
                </Button.ImageSource>
            </Button>

            <!-- BotÃ£o Adicionar -->
            <Button
                Text="ï¼‹"
                FontSize="30"
                WidthRequest="60"
                HeightRequest="60"
                CornerRadius="30"
                BackgroundColor="#0857bf"
                TextColor="White"
                Clicked="AddButton_Clicked" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
